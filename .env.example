APP_NAME=MedVita
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Warsaw
APP_URL=http://localhost

APP_LOCALE=pl
APP_FALLBACK_LOCALE=pl
APP_FAKER_LOCALE=pl_PL

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# === BAZA DANYCH ===
# Lokalnie: SQLite (domyślnie)
DB_CONNECTION=sqlite

# Produkcja (Railway PostgreSQL):
# Railway automatycznie ustawia te zmienne gdy dodasz PostgreSQL:
# - PGHOST, PGPORT, PGDATABASE, PGUSER, PGPASSWORD, DATABASE_URL
# Aplikacja automatycznie wykryje PGHOST i przełączy się na pgsql
# NIE musisz ręcznie ustawiać DB_CONNECTION na Railway!

# Dla Railway użyj 'file' (database wymaga PostgreSQL)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Dla Railway użyj 'file' (database wymaga PostgreSQL)
CACHE_STORE=file
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Dla testów lokalnych: MAIL_MAILER=log (e-maile w storage/logs)
# Dla produkcji: MAIL_MAILER=smtp
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD="your-app-password"
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@medvita.pl"
MAIL_FROM_NAME="MedVita"

# Alternatywnie dla Mailtrap (testowanie):
# MAIL_HOST=sandbox.smtp.mailtrap.io
# MAIL_PORT=2525
# MAIL_USERNAME=your-mailtrap-username
# MAIL_PASSWORD=your-mailtrap-password

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# === AI CONTENT ASSISTANT ===
# Aktywny provider: gemini | claude | openai
AI_PROVIDER=gemini

# Google Gemini (https://aistudio.google.com/app/apikey)
AI_GEMINI_API_KEY=
AI_GEMINI_MODEL=gemini-2.0-flash-exp

# Anthropic Claude (przyszlosc)
# AI_CLAUDE_API_KEY=
# AI_CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI (przyszlosc)
# AI_OPENAI_API_KEY=
# AI_OPENAI_MODEL=gpt-4o

# Ustawienia generowania
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TIMEOUT_SECONDS=60

# Rate limiting
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_PER_MINUTE=20
AI_RATE_LIMIT_PER_DAY=500
